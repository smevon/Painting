import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class Imagine {
	private int[][] Matrice;
	private int rows;
	private int cols;
	
	public int getRows() {
		return rows;
	}
	public void setRows(int rows) {
		this.rows = rows;
	}
	public int getCols() {
		return cols;
	}
	public void setCols(int cols) {
		this.cols = cols;
	}
	
	public Imagine(String fileName) { 
		boolean first = true;
		try (BufferedReader br = new BufferedReader(new FileReader(fileName)))
		{
			
			String sCurrentLine;
			int j = 0;
		
			while ((sCurrentLine = br.readLine()) != null) {
				if ( first ) {
					String[] lc;
					lc = sCurrentLine.split(" ");
					this.setRows(Integer.valueOf(lc[0]));
					this.setCols(Integer.valueOf(lc[1]));
					first = false;
					
					this.Matrice = new char[this.getRows()][this.getCols()];
				} else {
					
					for (int i = 0; i < sCurrentLine.length(); i ++ ) {
						this.Matrice[i][j] = sCurrentLine.charAt(i);
					}
					j++;
				}

			}

		} catch (IOException e) {
			e.printStackTrace();
		} 

	}
	
	public void afisare() {
		for (int i = 0; i < this.getRows(); i++) {
			for (int j = 0; j < this.getCols(); j++)
				System.out.print(Matrice[i][j]);
			System.out.println();
		}
	}

}
